<div class="d-flex justify-content-center flex-wrap m-3" id="mural">
  <% @gardens.each do |garden| %>
    <div class="card m-3 small-garden-card" style="width: 18rem;">
      <% if garden.image.attached? %>
        <%= cl_image_tag garden.image.key, crop: :fill, class: 'small-garden-card-img' %>
      <% else %>
        <%= image_tag 'garden.jpg', crop: :fill, class: 'small-garden-card-img' %>
      <% end %>
      <div class="card-body">
        <h5 class="card-title"><%= garden.name %></h5>
        <h5 class="card-title"><%= garden.location %></h5>
        <h5 class="card-title">Â£ <%= garden.price %></h5>
        <%= link_to 'See details', garden_path(garden), class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
