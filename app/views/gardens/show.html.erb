<div class="d-flex justify-content-center m-3"   background: rgba(40, 40, 100, 0.25);>
  <div class="card large-garden-card" style="width: 32rem;">
    <div class="card-body">
      <h2 class="card-title"><%= @garden.name %></h2>
      <h5 class="card-title">Description</h5>
      <p><%= @garden.description %></p>
      <h5 class="card-title">Location</h5>
      <p><%= @garden.location %></p>
      <h5 class="card-title">Price</h5>
      <p>Â£ <%= @garden.price %></p>
      <br>
      <%= render "bookings/form", garden: @garden, booking: @booking %>
    </div>
  </div>
  <% if @garden.image.attached? %>
    <%= cl_image_tag @garden.image.key, crop: :fill, class: 'large-img' %>
  <% else %>
    <%= image_tag 'garden.jpg', crop: :cover, class: 'large-img' %>
  <% end %>
</div>
<div class="container">
  <div id="map"
       style="width: 100%; height: 600px;"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
