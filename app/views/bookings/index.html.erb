<h1>Your Bookings</h1>

<div class="container" margin-top="10">
  <% @bookings.each do |booking|  %>

    <div class="card-booking m-3">
      <div class="d-flex">
      <% if booking.garden.image.attached? %>
          <%= cl_image_tag booking.garden.image.key, crop: :fill, class: 'card-img' %>
        <% else %>
          <%= image_tag 'garden.jpg', crop: :fill, class: 'card-img' %>
        <% end %>
      <div class="card-booking-infos" >
        <h2> <%= link_to booking.garden.name, booking_path(booking) %> </h2>
        <p> Your Booking Date: <%= booking.date %> <strong>Confirmed?</strong> </p>
    </div>
      </div>

  <div class="d-flex justify-content-center">
      <% random_rating = rand(2..5) %>
      <div class="content text-center">
          <div class="ratings"> <span class="product-rating"> <%= random_rating %> </span><span>/5</span>
              <div class="stars">
                <% random_rating.times do %>
                <i class="fa fa-star"></i>
                <% end %>
              <div class="rating-text"> <span>46 ratings & 15 reviews</span> </div>
          </div>
      </div>
  </div>


    </div>
      </div>
  <% end %>
</div>





