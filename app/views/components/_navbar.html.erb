<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo_2.png", alt: "alttext" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">


    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Home", root_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Gardens to rent", gardens_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Become a host", new_garden_path, class: "nav-link" %>
      </li>
      <li class="nav-item dropdown">
        <%  if user_signed_in? %>
          <%= cl_image_tag current_user.avatar.key, height: 40, width: 40, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% else %>
          <%= image_tag 'avatar_image.png', class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>

          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">

           <%  if user_signed_in? %>
             <%= link_to "My bookings", bookings_path, class: "dropdown-item" %>
             <%= link_to "My profile", current_user, class: "dropdown-item" %>
             <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
           <% else %>
             <%= link_to "Log in", user_session_path, class: "dropdown-item" %>
             <%= link_to "Sign-up", new_user_session_path, class: "dropdown-item" %>
             <%= link_to "Host your garden", new_garden_path, class: "dropdown-item" %>
           <% end %>

          </div>
      </li>
    </ul>
  </div>
</div>

<!-- avatar - sign-in/log-out -->
