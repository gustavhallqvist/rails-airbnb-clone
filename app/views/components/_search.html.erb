<div class="container">
  <%= form_tag gardens_path, method: :get, class: "search-home" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Where would you like to rent a garden?"
  %>
  <%= submit_tag "Search", class: "btn btn-new-primary" %>
<% end %>
</div>
